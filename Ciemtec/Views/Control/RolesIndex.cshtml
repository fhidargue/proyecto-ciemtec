@model IEnumerable<RolViewModel>
@{
    ViewData["Title"] = "ControlIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper" id="wrapper-rol">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="pagina-inicial.html">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="@Url.ActionLink("ControlIndex","Control")">Control</a></li>
                            <li class="breadcrumb-item active">Roles</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Roles</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card-box">
                    <form id="form-rol" method="post" action="/CrearRol">
                        <section>
                            <h3>Creación de un nuevo Rol</h3>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group clearfix">
                                        <label for="nombreRol">Nombre del rol</label>
                                        <div>
                                            <input class="form-control" id="nombre-rol" name="nombreRol" type="text">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6" id="modulosDiv">
                                    <label for="modulos">Módulo</label>
                                    <select class="form-control" id="modulosSelect">
                                        <option value="1">Control</option>
                                        <option value="2">Equipos</option>
                                        <option value="3">Insumos</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="permisos">Permisos</label>
                                    <div class="crud" id="checkbox-permisos">
                                        @*<input class="checkbox-crud" type="checkbox" id="read" name="read" value="1" />
                                            <label for="read">Ver datos</label><br />
                                            <input class="checkbox-crud after" type="checkbox" id="update" name="update" value="2" />
                                            <label for="update">Modificar datos</label><br />
                                            <input class="checkbox-crud after" type="checkbox" id="add" name="add" value="3" />
                                            <label for="add">Crear datos</label><br />
                                            <input class="checkbox-crud after" type="checkbox" id="delete" name="delete" value="4" />
                                            <label for="delete">Eliminar datos</label>*@
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group clearfix">
                                        <label for="new-role"></label>
                                        <div class="float-right mt-5">
                                            <button id="new-role" type="submit" class="btn btn-primary" style="margin-top: 1.5%;">Agregar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <h3>Lista de roles</h3>
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                           style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Nombre del rol</th>
                                <th>Acción</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NombreRol</td>
                                    <td><a class="detalles" href="@Url.ActionLink("EditarRoles","Control", new { rolId = item.IdentificadorRol })">Editar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end row -->
    </div> <!-- end container-fluid -->
</div>
<script src="~/src/src/js/vendor/jquery.js"></script>
<script src="~/src/libs/jquery-validation/jquery.validate.min.js"></script>
<script src="~/src/js/rol.js"></script>