@model EmpleadoViewModel
@{
    ViewData["Title"] = "EditarPersonal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="pagina-inicial.html">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="@Url.ActionLink("ControlIndex","Control")">Control</a></li>
                            <li class="breadcrumb-item active">Editar usuario</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Editar usuario</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="steps clearfix ciemtec-box">

                                <div class="form-group float-right ">
                                    <h4>Fecha actual</h4>
                                    <input type="text" value="12/09/2020" class="form-control text-centers" id="fechaActual" readonly>

                                </div>
                                <div class="form-group clearfix float-left">
                                    <img src="https://www.news-medical.net/image.axd?picture=2020%2F1%2Fshutterstock_1585974553.jpg" alt="Trulli" width="40" height="90">
                                </div>
                            </div>
                            <form id="wizard-validation-form" action="#">
                                <div>

                                    <h4>Información Personal</h4>
                                    <section>
                                        <div class="row">

                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="CedulaEmpleado">Cédula</label>
                                                    @Html.TextBoxFor(m => m.CedulaEmpleado, new { @class = "form-control", @type = "text", @name = "CedulaEmpleado", @id = "CedulaEmpleado" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="NombreEmpleado">Nombre</label>
                                                    @Html.TextBoxFor(m => m.NombreEmpleado, new { @class = "form-control", @type = "text", @name = "NombreEmpleado", @id = "NombreEmpleado" })
                                                </div>
                                            </div>
                                        </div><!-- end row -->
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="ApellidoPaternoEmpleado">Primer apellido</label>
                                                    @Html.TextBoxFor(m => m.ApellidoPaternoEmpleado, new { @class = "form-control", @type = "text", @name = "ApellidoPaternoEmpleado", @id = "ApellidoPaternoEmpleado" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="ApellidoMaternoEmpleado">Segundo apellido</label>
                                                    @Html.TextBoxFor(m => m.ApellidoMaternoEmpleado, new { @class = "form-control", @type = "text", @name = "ApellidoMaternoEmpleado", @id = "ApellidoMaternoEmpleado" })
                                                </div>
                                            </div>
                                        </div>
                                    </section>


                                    <h4>Información de Cuenta</h4>
                                    <section>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="UsuarioEmpleado">Usuario</label>
                                                    @Html.TextBoxFor(m => m.UsuarioEmpleado, new { @class = "form-control", @type = "text", @name = "UsuarioEmpleado", @id = "UsuarioEmpleado" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="Correo">Correo electrónico</label>
                                                    @Html.TextBoxFor(m => m.CorreoEmpleado, new { @class = "form-control", @type = "text", @name = "CorreoEmpleado", @id = "CorreoEmpleado" })
                                                </div>
                                            </div>
                                        </div><!-- end row -->
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="ContraseniaEmpleado">Contraseña</label>
                                                    @Html.TextBoxFor(m => m.ContraseniaEmpleado, new { @class = "form-control", @type = "text", @name = "ContraseniaEmpleado", @id = "ContraseniaEmpleado" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="contrasenia">Confimar contraseña</label>
                                                    <div>
                                                        <input id="contrasenia" name="contrasenia" type="text"
                                                               class="form-control">
                                                    </div>
                                                </div>


                                            </div>
                                        </div><!-- end row -->
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label for="exampleSelect1">Rol</label>
                                                <select class="form-control" id="exampleSelect1">
                                                    <option>Analista</option>
                                                    <option>Administrador/a</option>
                                                    <option>Secretario/a</option>
                                                </select>
                                            </div>

                                            <div class="col-sm-6">
                                                <label for="imagenPerfil">Editar foto</label>
                                                <div class="form-group clearfix">
                                                    <input type="file" class="dropify" id="imagenPerfil" />
                                                </div>
                                            </div>
                                        </div>

                                    </section>
                                    <!--<h3>Detalles de creación</h3>
                                    <section>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="agregado-por">Agregado por:</label>
                                                    <div>
                                                        <input id="agregado-por" name="agregado-por" type="text"
                                                               class="form-control" value="Luís" readonly>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <label for="fecha">Día agregado</label>
                                                    <div>
                                                        <input id="fecha" name="fechas" type="text"
                                                               class="form-control" value="2014/01/01" readonly>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>-->
                                    <!-- end row -->
                                    <!--</section>--><br />
                                    <section>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group clearfix">
                                                    <button id="edit-user" type="submit" class="btn btn-primary">Confirmar</button>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- end row -->
                                    </section>
                                </div>
                            </form>

                        </div>

                    </div>
                    <!-- end row -->

                </div>
            </div><!-- end col-->

        </div>
        <!-- end row -->
    </div><!-- end col -->
</div>