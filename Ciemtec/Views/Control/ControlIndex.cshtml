@model IEnumerable<EmpleadoViewModel>
@{
    ViewData["Title"] = "ControlIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="pagina-inicial.html">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="@Url.ActionLink("ControlIndex","Control")">Control</a></li>

                        </ol>
                    </div>
                    <h4 class="page-title">Control del personal</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-sm-3">
                <div class="card-box tilebox-one">
                    <i class="fas fa-user-plus float-right m-0 h2 text-muted"></i>
                    <h6 class="text-muted text-uppercase mt-0">Personal</h6>
                    <div class="Box-Button">
                        <a href="@Url.ActionLink("CrearPersonal","Control")" class="btn btn-ciemtec waves-effect waves-light">
                            <i class="fas fa-plus"></i> <span>Insertar personal</span>
                        </a>
                    </div>

                </div>
            </div>

            <div class="col-sm-3">
                <div class="card-box">
                    <h4 class="header-title mb-3">Eficiencia - Mensual</h4>
                    <p class="font-weight-semibold mb-3">
                        Tareas<span class="text-success float-right"><b>90%</b></span>
                    </p>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar"
                             style="width: 90%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="78">
                        </div>
                    </div>
                </div>
            </div><!-- end col-->

            <div class="col-sm-3">
                <div class="card-box">
                    <h4 class="header-title mb-3">Trabajo promedio - Mensual</h4>
                    <p class="font-weight-semibold mb-3">
                        Tareas<span class="text-success float-right"><b>78%</b></span>
                    </p>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar"
                             style="width: 78%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="78">
                        </div>
                    </div>
                </div>
            </div><!-- end col-->
            <div class="col-sm-3">
                <div class="card-box">
                    <h4 class="header-title mb-3">Trabajo promedio - Anual</h4>

                    <p class="font-weight-semibold mb-3">
                        Tareas<span class="text-warning float-right"><b>78%</b></span>
                    </p>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar progress-bar-striped bg-warning" role="progressbar"
                             style="width: 78%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="78">
                        </div>
                    </div>
                </div>
            </div><!-- end col-->
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                           style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Identificador</th>
                                <th>Nombre y Apellidos</th>
                                <th>Usuario</th>
                                <th>Correo electrónico</th>
                                <th>Rol</th>
                                <th>Detalles</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CedulaEmpleado</td>
                                    <td>@item.NombreEmpleado @item.ApellidoPaternoEmpleado @item.ApellidoMaternoEmpleado</td>
                                    <td>@item.UsuarioEmpleado</td>
                                    <td>@item.CorreoEmpleado</td>
                                    <td>@item.identificadorRolNavigation.NombreRol</td>
                                    <td>
                                        <a href="@Url.ActionLink("EditarPersonal","Control", new { id = item.IdentificadorEmpleado })">
                                            <p class="detalles">Ver</p>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end row -->
        <div class="row">
            <div class="col-lg-6 col-xl-8">
                <div class="card-box">
                    <h4 class="header-title mb-3">Horas laboradas en AVG de todo CIEMTEC</h4>

                    <div class="text-center">
                        <ul class="list-inline chart-detail-list mb-0">
                            <li class="list-inline-item">
                                <h6 class="text-info"><i class="mdi mdi-circle-outline mr-1"></i>Metalúrgica</h6>
                            </li>
                            <li class="list-inline-item">
                                <h6 class="text-success"><i class="mdi mdi-triangle-outline mr-1"></i>Oxidación</h6>
                            </li>
                            <li class="list-inline-item">
                                <h6 class="text-muted"><i class="mdi mdi-square-outline mr-1"></i>Dureza</h6>
                            </li>
                        </ul>
                    </div>

                    <div id="morris-bar-stacked" class="morris-chart" style="height: 320px;"></div>

                </div>
            </div><!-- end col-->
            <div class="col-lg-6 col-xl-4">
                <div class="card-box">
                    <h4 class="header-title mb-3">Horas por Laboratorio</h4>

                    <div class="text-center mb-3">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-sm btn-secondary">Hoy</button>
                            <button type="button" class="btn btn-sm btn-secondary">Esta semana</button>
                            <button type="button" class="btn btn-sm btn-secondary">Semana pasada</button>
                        </div>
                    </div>

                    <div id="morris-donut-example" class="morris-chart" style="height: 268px;"></div>

                    <div class="text-center">
                        <ul class="list-inline chart-detail-list mb-0 mt-2">
                            <li class="list-inline-item">
                                <h6 class="text-info"><i class="mdi mdi-circle-outline mr-1"></i>Metalúrgica</h6>
                            </li>
                            <li class="list-inline-item">
                                <h6 class="text-success"><i class="mdi mdi-triangle-outline mr-1"></i>Oxidación</h6>
                            </li>
                            <li class="list-inline-item">
                                <h6 class="text-muted"><i class="mdi mdi-square-outline mr-1"></i>Dureza</h6>
                            </li>
                        </ul>
                    </div>

                </div>
            </div><!-- end col-->
        </div>


    </div> <!-- end container-fluid -->

</div>